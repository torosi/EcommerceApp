
@model IEnumerable<ProductTypeViewModel>

<div class="container">
    <div class="row">
        <div class="col">
            <h3>Product Types</h3>
        </div>
        <div class="col">
            <a asp-action="Create" class="btn btn-primary float-end">Add New Product Type <i class="bi bi-plus-circle"></i></a>
        </div>
    </div>

    <div class="row">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Name</th>
                    <th scope="col">Description</th>
                    <th scope="col">Created</th>
                    <th scope="col">Updated</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Any())
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>@item.Description</td>
                            <td>@item.Created</td>
                            <td>@item.Updated</td>
                            <td>
                                <a asp-action="Edit" asp-controller="ProductType" asp-route-categoryId="@item.Id" class="btn btn-secondary">
                                    Edit
                                </a>
                                <a asp-controller="ProductType" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger mx-2">
                                    <i class="bi bi-trash-fill"></i> Delete
                                </a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>

    </div>
    
</div>