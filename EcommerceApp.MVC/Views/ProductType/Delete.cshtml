@model ProductTypeViewModel



<div class="container">
    <div class="card shadow border-0 mt-4">
        <div class="card-header bg-primary text-white bg-gradient m-lg-0 py-3">
            <div class="row">
                <div class="col">
                    <h3>Delete Product Type</h3>
                </div>
            </div>
        </div>
        <div class="card-body bg-white p-4">
            <div class="row">
                <div class="col-8">
                    <form asp-action="DeleteProductType" method="post" enctype="multipart/form-data">
                        <input asp-for="@Model.Id" hidden />

                        <div class="form-group">
                            <label asp-for="Name" class="control-label"></label>
                            <input asp-for="Name" class="form-control" disabled />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Description" class="control-label"></label>
                            <input asp-for="Description" class="form-control" disabled />
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        <div class="form-group mt-2">
                            <input type="submit" value="Delete" class="btn btn-danger" />
                            <a asp-action="Index" class="btn btn-primary">Back</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


