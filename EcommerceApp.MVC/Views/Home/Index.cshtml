    @if (Model.Categories != null && Model.Categories.Any())
    {

        var firstCategory = Model.Categories.ElementAtOrDefault(0);
        var secondCategory = Model.Categories.ElementAtOrDefault(1);
        var thirdCategory = Model.Categories.ElementAtOrDefault(2);

        <div class="row mt-2">
            <div class="col pe-1">
                @if (firstCategory != null)
                {
                    <a href="/Category/Details?categoryId=@firstCategory.Id">
                        <div class="card bg-dark text-white border-0">
                            <img class="card-img" src="@firstCategory.ImageUrl" alt="@firstCategory.Name">
                            <div class="card-img-overlay d-flex flex-column justify-content-end gradient-overlay">
                                <p class="card-title h5">@firstCategory.Name</p>
                                <p class="card-text text-decoration-underline">Shop Now</p>
                            </div>
                        </div>
                    </a>
                }
            </div>
            
            <div class="col pe-1 ps-1">
                @if (secondCategory != null)
                {
                    <a href="/Category/Details?categoryId=@secondCategory.Id">
                        <div class="card bg-dark text-white border-0">
                            <img class="card-img" src="@secondCategory.ImageUrl" alt="@secondCategory.Name">
                            <div class="card-img-overlay d-flex flex-column justify-content-end gradient-overlay">
                                <p class="card-title h5">@secondCategory.Name</p>
                                <p class="card-text text-decoration-underline">Shop Now</p>
                            </div>
                        </div>
                    </a>
                }
            </div>

            <div class="col ps-1">
                @if (thirdCategory != null)
                {
                    <a href="/Category/Details?categoryId=@thirdCategory.Id">
                        <div class="card bg-dark text-white border-0">
                            <img class="card-img" src="@thirdCategory.ImageUrl" alt="@thirdCategory.Name">
                            <div class="card-img-overlay d-flex flex-column justify-content-end gradient-overlay">
                                <p class="card-title h5">@thirdCategory.Name</p>
                                <p class="card-text text-decoration-underline">Shop Now</p>
                            </div>
                        </div>
                    </a>
                }
            </div>
        </div>
    }


    <div class="row mt-2">
        <div class="col-12">
            <img class="" src="/images/next/banner-image.jpg" alt="Card image" style="width:100%">
        </div>
    </div>


    @if (Model.Categories != null && Model.Categories.Any() && Model.Categories.ElementAtOrDefault(3) != null)
    {
        var fourthCategory = Model.Categories.ElementAtOrDefault(3);
        var fithCateogry = Model.Categories.ElementAtOrDefault(4);
        var sixthCategory = Model.Categories.ElementAtOrDefault(5);

        <div class="row mt-2">
            <div class="col pe-1">
                @if (fourthCategory != null)
                {
                    <a href="/Category/Details?categoryId=@fourthCategory.Id">
                        <div class="card bg-dark text-white border-0">
                            <img class="card-img" src="@fourthCategory.ImageUrl" alt="@fourthCategory.Name">
                            <div class="card-img-overlay d-flex flex-column justify-content-end gradient-overlay">
                                <p class="card-title h5">@fourthCategory.Name</p>
                                <p class="card-text text-decoration-underline">Shop Now</p>
                            </div>
                        </div>
                    </a>
                }
            </div>

            <div class="col pe-1 ps-1">
                @if (fithCateogry != null)
                {
                    <a href="/Category/Details?categoryId=@fithCateogry.Id">
                        <div class="card bg-dark text-white border-0">
                            <img class="card-img" src="@fithCateogry.ImageUrl" alt="@fithCateogry.Name">
                            <div class="card-img-overlay d-flex flex-column justify-content-end gradient-overlay">
                                <p class="card-title h5">@fithCateogry.Name</p>
                                <p class="card-text text-decoration-underline">Shop Now</p>
                            </div>
                        </div>
                    </a>
                }
            </div>

            <div class="col ps-1">
