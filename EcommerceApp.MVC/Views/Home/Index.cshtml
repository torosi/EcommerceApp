@model List<ProductViewModel>

@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <div class="row d-flex gx-3 gy-3">

    <div id="carouselExampleSlidesOnly" class="carousel slide" data-ride="carousel" data-interval="5000">
        <div class="carousel-inner">
            <div class="carousel-item active">
              <img class="d-block hero-image" src="\images\banner\banner1.jpg" alt="First slide">
            </div>
            <div class="carousel-item">
              <img class="d-block hero-image" src="\images\banner\banner2.jpg" alt="Second slide">
            </div>
            <div class="carousel-item">
              <img class="d-block hero-image" src="\images\banner\banner3.jpg" alt="Second slide">
            </div>
        </div>
    </div>


        @foreach (var product in Model)
        {
            @if (!string.IsNullOrEmpty(product.ImageUrl))
            {
                <div class="card border-0 img-fluid col-3">
                    <a href="#" class="text-decoration-none text-dark">
                        <img class="card-img-top product-image" src="@(product.ImageUrl)" alt="Card image" style="width:100%">
                        @* <div class="card-img-overlay d-flex align-items-end p-3 fw-bolder">
                            <p class="card-title text-dark h2">@product.Name</p>
                        </div> *@
                    </a>
                </div>
            } 
            else
            {
                <div class="card border-0 img-fluid col-3">
                    <a href="#" class="text-decoration-none text-dark">
                        <img class="card-img-top product-image" src="\images\placeholder.jpg" alt="Card image" style="width:100%">
                         @* <div class="card-img-overlay d-flex align-items-end p-3 fw-bolder">
                             <p class="card-title text-dark h2">@product.Name</p>
                         </div> *@
                    </a>
                </div>
            }
        }
    </div>
</div>
