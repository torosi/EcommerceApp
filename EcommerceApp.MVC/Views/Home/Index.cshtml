@model HomePageViewModel

@{
    ViewData["Title"] = "Home Page";
}

<div class="container-fluid">

    <div class="row d-flex gx-3 gy-3">
        <div id="Banner-Images" class="carousel slide col" data-ride="carousel" data-interval="5000">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="d-block hero-image" src="/images/next/hero-banner4.jpg" alt="First slide">
                </div>
                <div class="carousel-item">
                    <img class="d-block hero-image" src="/images/next/hero-banner2.jpg" alt="Second slide">
                </div>
                <div class="carousel-item">
                    <img class="d-block hero-image" src="/images/next/hero-banner3.jpg" alt="Second slide">
                </div>
            </div>
        </div>
    </div>

 
