@model ProductViewModel


<div class="container">
    <div class="card shadow border-0 mt-4">
        <div class="card-header bg-primary text-white bg-gradient m-lg-0 py-3">
            <div class="row">
                <div class="col">
                    <h3>Delete Product</h3>
                </div>
            </div>
        </div>
        <div class="card-body bg-white p-4">
            <div class="row">
                <div class="col-8">
                    <form asp-action="Delete" enctype="multipart/form-data">
                        <input asp-for="Id" hidden />
                        <input asp-for="ImageUrl" hidden />

                        <div class="form-group">
                            <label asp-for="Name" class="control-label"></label>
                            <input asp-for="Name" class="form-control" disabled/>
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Description" class="control-label"></label>
                            <input asp-for="Description" class="form-control" disabled />
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        @if (Model.Category != null && Model.Category.Name != null)
                        {
                            <div class="py-2 col-12">
                                <label asp-for="Category.Name" class="control-label">Category</label>
                                <input asp-for="Category.Name" class="form-control" disabled />
                                <span asp-validation-for="Category.Name" class="text-danger"></span>
                            </div>
                        }
                        
                        <div class="form-group">
                            <input type="submit" value="Delete" class="btn btn-danger" />
                            <a asp-action="Index" asp-controller="Product" class="btn btn-primary">Back</a>
                        </div>
                    </form>
                </div>

                <div class="col-4">
                    <img src="@(Model.ImageUrl)" class="w-100" />
                </div>
            </div>
        </div>
    </div>
</div>
