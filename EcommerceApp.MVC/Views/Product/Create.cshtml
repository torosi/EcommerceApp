@model CreateProductViewModel


<div class="container">
    <div class="card shadow border-0 mt-4">
        <div class="card-header bg-primary text-white bg-gradient m-lg-0 py-3">
            <div class="row">
                <div class="col">
                    <h3>Create New Product</h3>
                </div>
            </div>
        </div>
        <div class="card-body bg-white p-4">
            <div class="row">
                <form asp-action="Create" enctype="multipart/form-data">
                    <div class="form-group">
                        <label asp-for="Product.Name" class="control-label"></label>
                        <input asp-for="Product.Name" class="form-control" />
                        <span asp-validation-for="Product.Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Product.Description" class="control-label"></label>
                        <input asp-for="Product.Description" class="form-control" />
                        <span asp-validation-for="Product.Description" class="text-danger"></span>
                    </div>
                    <div class="py-2 col-12">
                        <label asp-for="Product.CategoryId" class="control-label">Category</label>
                        <select asp-for="Product.CategoryId" class="form-select">
                            <option id="loading-categories" disabled selected>Loading...</option>
                        </select>
                        <span asp-validation-for="Product.CategoryId" class="text-danger"></span>
                    </div>
                    <div class="py-2 col-12">
                        <label class="btn btn-secondary">
                            Choose file <input type="file" name="file" hidden>
                        </label>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script>
        $(document).ready(function () {
            $.ajax({
                url: '@Url.Action("GetAllCategories", "Category")',
                type: 'GET',
                success: function (response) {
                    var categoryList = $('[name="Product.CategoryId"]');
                    categoryList.empty(); // Clear the dropdown list
                    // Check if the data contains categories
                    if (response.data && response.data.length > 0) {
                        // Iterate through each category
                        $.each(response.data, function (index, category) {
                            categoryList.append($('<option>', {
                                value: category.id,
                                text: category.name
                            }));
                        });
                    } else {
                        // Show a message if there are no categories
                        categoryList.append('<option disabled>No categories available</option>');
                    }
                },
                error: function (ex) {
                    console.error("Failed to load categories.");
                    $('#category-list').empty().append('<option disabled>Error loading categories</option>');
                }
            });
        });
    </script>
}
