@model CreateProductViewModel


<div class="container">
    <div class="row">
        <div class="col">
            <h3>Create New Product</h3>
        </div>
    </div>
    <div class="row">
        <form asp-action="Create" enctype="multipart/form-data">
            <div class="form-group">
                <label asp-for="Product.Name" class="control-label"></label>
                <input asp-for="Product.Name" class="form-control" />
                <span asp-validation-for="Product.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Description" class="control-label"></label>
                <input asp-for="Product.Description" class="form-control" />
                <span asp-validation-for="Product.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UploadImage.ImageFile" class="control-label">Image</label>
                <input asp-for="UploadImage.ImageFile" type="file" class="form-control border-0 shadow" />
                <span asp-validation-for="UploadImage.ImageFile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>